@-webkit-keyframes rotate
  from
    -webkit-transform rotate(0deg)
  to 
    -webkit-transform rotate(360deg)

i.icon-refresh.animooted
  -webkit-animation-name             rotate 
  -webkit-animation-duration         2s
  -webkit-animation-iteration-count  infinite
  -webkit-animation-timing-function  linear

button
  transition box-shadow 250ms ease-out, opacity 250ms ease-out, width 250ms ease-out

.content
  display none

#top
  //background whitesmoke

#main_brand
  //font-family 'Overlock'
  //font-style italic
  font-size 64px
  line-height 70px
  color rgba(255,255,255, 1)
  font-weight normal
  text-transform lowercase
  text-shadow 0 1px 1px black

#new_playlist_options
  margin-top 20px

#new_playlist_options > hr
  width 300px
  text-align center
  margin 10px auto
  border 0
  //border-top 1px solid rgba(255,255,255,0.5)

#new_playlist_options > .row
  text-decoration none
  display block
  cursor pointer
  user-select none
  margin 10px auto
  box-sizing border-box
  padding-left 94px
  height 94px
  width 660px
  text-transform lowercase

@media screen and (max-width: 705px)
  #new_playlist_options > .row
    width auto

#create
  background url(64_html.png) 15px 45px no-repeat rgba(0,0,0,0.2)

#search
  background url(64_search.png) 15px 45px no-repeat rgba(0,0,0,0.2)

#import
  background url(64_upload.png) 15px 45px no-repeat rgba(0,0,0,0.2)

#new_playlist_options > .row
  opacity 0.7
  transition background-position 150ms, opacity 150ms

#new_playlist_options > .row:hover,
#new_playlist_options > .row.focus
  opacity 1
  background-position 15px 15px

#new_playlist_options > .row > legend
  border none
  font-size 30px
  box-sizing border-box
  margin-top 10px
  color rgba(255,255,255,0.9)

#slogan
  text-transform lowercase
  margin-top -20px
  margin-left 190px
  font-weight bold
  color black

#brand_row
  text-align center

.brand, .navbar-text, .brand a
  text-transform lowercase
  color white !important
  text-shadow none !important
  transition color 250ms

.brand a:hover
  transition color 250ms
  color #C3EEAA !important
  text-decoration none


.navbar .divider
  width 20px
  display inline-block
  text-align center

.row
  margin-left 0

.navbar
  margin-bottom 5px

.navbar-inner
  border 0
  background transparent
  box-shadow none
  border-radius 0

.navbar .btn > [class^="icon-"], navbar .btn > [class*=" icon-"]
  margin-top 3px

body
  background url(bg.jpg) center -90px no-repeat black
  font-family 'Open Sans', sans-serif
  color white
