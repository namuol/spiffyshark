.nav .dropdown-menu
  padding 0.5em

#playlists > ul > li
  width 100%
  box-sizing border-box
  height 50px
  padding 0
  font-size 19px

#playlists > ul > li > a
  padding 14px 10px
  display inline-block
  width 100%
  height 100%
  white-space nowrap
  overflow hidden
  text-overflow ellipsis

#playlists legend
  color white
  background rgba(0,0,0,0.3)
  width auto
  margin-bottom 0
  text-transform uppercase

#playlist_loading
  padding-left 20px !important
  text-transform lowercase

.playlists_list
  list-style none

.playlists_list
  margin 0

.playlists_list li
  padding 5px

#song_modal .modal-body form
  margin 0

.modal form.form-horizontal .control-label
  width 80px
.modal form.form-horizontal .control-group .controls
  margin-left 90px

ul.search_results
  list-style none

.modal_search_results ul
  margin 0

button.add_album_tracks
  margin-top -35px
  margin-right 5px
  float right

#album_modal_search_results > ul
  margin 0

.discogs_master_result
  display none
  padding 10px
  padding-top 0
  font-size 12px

.discogs_master_result > .well
  margin 0

.show_discogs_master,
.hide_discogs_master
  cursor pointer
  opacity 0.5
  box-sizing border-box
  float left
  width 40px
  height 40px
  padding-top 10px
  padding-left 10px

.show_discogs_master:hover,
.hide_discogs_master:hover
  opacity 1

.discogs_tracklist
  list-style none

.discogs_master_list > .well
  overflow overlay

.discogs_thumb
  float right
  background #aaa
  border 1px solid #aaa
  width 90px
  height 88px

.hide_discogs_master
  display none

.search_results li
.modal_search_results li
  background white

.search_results li:nth-child(odd),
.modal_search_results li:nth-child(odd)
  margin 0
  background #eee

.playlists_list > li
  background rgba(0,0,0,0.3)
.playlists_list > li:nth-child(odd)
  background rgba(0,0,0,0.4)

.playlists_list > li > a
  color #C3EEAA

#disconnected_msg
  display none

.uploaded_playlist tbody tr
  height 41px
  font-size 12px

.uploaded_playlist .buttons
  padding 0
  width 40px

#playlist
  border-radius 6px
  padding 0 4px
  background white

#playlist legend
  color black
  padding 0 10px
  margin-bottom 0

#playlist_top_wrapper
  box-sizing border-box
  height 50px

#playlist_top
  box-sizing border-box
  height 50px
  padding 5px
  background white
  white-space nowrap

#del_song
  box-shadow 0 0 0 rgba(0,0,0,0)
#del_song.warning
  box-shadow 0 0 50px rgba(255,0,0,1)
  padding inherit 20px

#playlist_top.affix
  top 0
  box-shadow 0 2px 7px rgba(0,0,0,0.5)
  border-radius 0 0 5px 5px

#playlist_top .btn-group
  margin-top 1px

#playlist_top > .btn-toolbar
  margin 0

@media screen and (max-width: 705px)
  #playlist_top button span:not(.caret)
    display none

