.album_art
  float left
  max-height 41px
  margin-right 3px

.form-horizontal .control-group
  margin-bottom 5px

.no_songs_found, .no_songs_found > *
  background #fcc !important

button.select-song
  padding 0
  width 38px
  height 38px
  margin 1px
  float left

button.select-song i
  visibility hidden

button.select-song.active i
  visibility visible

button.select-song.chosen
  background #afa

button.editTrack
  padding 0
  width 38px
  height 38px
