  overflow hidden
  text-overflow ellipsis

.track_info
  font-size 12px
  white-space nowrap
  overflow hidden
  max-height 41px
  text-overflow ellipsis

.track_artist_album
  margin-right 53px

.track_artist_album, .track_artist_album a
  color #888 !important
